<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/noEventsTxtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No events today, Add one clicking below"
        ></TextView>

    <ListView
        android:id="@+id/eventsLsvw"
        android:layout_width="wrap_content"
        android:layout_height="150dp"></ListView>

    <Button
        android:id="@+id/addReminderBtn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4F63D1"
        android:text="ADD EVENTS"></Button>
</LinearLayout>